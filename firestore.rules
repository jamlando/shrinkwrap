rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Waitlist: anyone can create a document; no read/update/delete from client.
    // Document shape: email (string), createdAt (timestamp), source (string, optional)
    match /waitlist/{id} {
      allow create: if request.resource.data.email is string
                   && request.resource.data.email.size() >= 3
                   && (request.resource.data.keys().hasOnly(['email', 'createdAt', 'source'])
                       || request.resource.data.keys().hasOnly(['email', 'createdAt']));
      allow read, update, delete: if false;
    }
  }
}
